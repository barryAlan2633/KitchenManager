<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="118dp"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    tools:background="@color/black">


    <ImageView
        android:id="@+id/img_meal"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@drawable/ic_error_outline_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Meal's image" />

    <TextView
        android:id="@+id/tv_recipeName"
        style="@style/Title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_meal"
        tools:text="Spaghetti" />

    <TextView
        android:id="@+id/tv_numberOfMeals"
        style="@style/Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_numberOfMeals"
        app:layout_constraintStart_toEndOf="@+id/tv_numberOfMeals"
        app:layout_constraintTop_toTopOf="@+id/tv_numberOfMeals"
        app:srcCompat="@drawable/ic_chevron_right_white_24dp"
        android:contentDescription="add one to meal amount image"/>

    <ImageView
        android:id="@+id/img_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_numberOfMeals"
        app:layout_constraintEnd_toStartOf="@+id/tv_numberOfMeals"
        app:layout_constraintTop_toTopOf="@+id/tv_numberOfMeals"
        app:srcCompat="@drawable/ic_chevron_left_white_24dp"
        android:contentDescription="subtract one from meal amount image" />


</androidx.constraintlayout.widget.ConstraintLayout>
